= formy(:table_form) do |f|

  - f.heading :visibility.t
  - for lock in [:view, :see_groups, :see_contacts] do
    - f.row do |r|
      - r.label permission_lock_label(lock)
      - r.input permission_lock_tag(lock, @keys)
      - r.info  permission_lock_info(lock)

  - f.heading :sharing_and_requests.t
  - for lock in [:pester, :request_contact] do
    - f.row do |r|
      - r.label permission_lock_label(lock)
      - r.input permission_lock_tag(lock, @keys)
      - r.info  permission_lock_info(lock)

.p.key
  = formy(:dictionary) do |f|
    - f.title :permissions_key.tcap + ':'
    - @keys.each do |key|
      - f.row do |r|
        - r.label permission_holder_label(key.holder)
        - r.info permission_holder_info(key.holder)

