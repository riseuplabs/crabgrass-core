#title.page_title.shy_parent
  %h1
    = h @page.title
    - if may_edit_page?
      = link_to_modal(:edit_title.t.titleize, {:url => edit_page_title_path(@page)}, {:class => 'shy inline plain', :icon => 'pencil'})
  - if @page.summary.present?
    .summary= h @page.summary
  - if @title_addendum
    %span= @title_addendum
  
