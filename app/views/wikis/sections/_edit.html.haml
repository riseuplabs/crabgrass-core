- if @wiki_inline_error
  %blockquote.error=h @wiki_inline_error
- rows = [word_wrap((@markup||""), 80).count("\n")+4, 30].min
- form_remote_tag :loading => show_spinner('save'), :url => wiki_section_url(@wiki, @section), :method => 'put' do
  .fieldset
    = text_area_tag 'wiki[body]', h(@markup), :rows => rows, :cols => 60, :style => 'width:99%;', :id => 'wiki_body'
    = formatting_reference_link
    .buttons
      = submit_tag("Save", :name => 'save') unless @wiki_inline_error
      = button_to_remote 'Cancel', {:loading => show_spinner('save'), :url => wiki_section_url(@wiki, @section, :cancel => true), :method => 'put'}, {:name => 'ajax_cancel'}
      = spinner('save')
